<h3 style="text-align:center">@ViewBag.message</h3>
<br>
@if (ViewBag.viewback != null)
{
    string back = ViewBag.viewback;
    if (back == "AdminAndStaff")
    {
        <h4>@Html.ActionLink("Update Teacher Contact", "AdminEditApplication", new { id = Model.ApplicationId })</h4>
        <hr/>
        <p>@Html.ActionLink("Back to List", "getApplication") </p>
    }
    if (back == "User")
    {
        <p>
            @Html.ActionLink("Back to List", "getApplicationOfID", new { id = Model.ApplicantId })
        </p>
    }

